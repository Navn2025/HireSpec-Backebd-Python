# Flask Backend Environment Variables

# Flask
SECRET_KEY=your-super-secret-key-change-this
FLASK_ENV=development
PORT=5000

# CORS
FRONTEND_ORIGIN=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Cookie Settings (production values in comments)
COOKIE_SAMESITE=Lax
COOKIE_SECURE=false
# COOKIE_SAMESITE=None  # Production
# COOKIE_SECURE=true    # Production

# Mail Configuration (Gmail example)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Database (SQLite - default for development)
DATABASE_PATH=./users.db

# Database (MySQL - for production)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your-db-password
DB_NAME=interview_platform_db

# Face Recognition Settings
FACE_MIN_SCORE=0.35
FACE_RATIO_THRESHOLD=0.18
FACE_ADAPTIVE_LR=0.05
FACE_DEVICE=cpu

# Pinecone Vector Database (Required for face recognition)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=face-auth-index
PINECONE_HOST=
PINECONE_USE_POD=false
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# Production Settings (uncomment for production deployment)
# RENDER=true
# FLASK_ENV=production
